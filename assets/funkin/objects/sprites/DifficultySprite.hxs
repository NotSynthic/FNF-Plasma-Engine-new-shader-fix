function create(diff:String) {
    changeDifficulty(diff);
}

function changeDifficulty(diff:String) {
    loadGraphic(FNFAssets.getImage(AssetPaths.image("story_difficulties/" + diff)));
    offset.x = frameWidth / 2;
    offset.y = frameHeight / 2;

    offset.x -= 156 * (scale / 2);
    offset.y -= 156 * (scale / 2);
}